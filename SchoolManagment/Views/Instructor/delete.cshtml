    </div>
    <div class="mb-2">
        <label asp-for="Address">Address</label>
        <input asp-for="Address" class="form-control" readonly />
    </div>
    <div class="mb-2">
        <label asp-for="dept_Id"></label>
        <select asp-for="dept_Id" asp-items="depts" class="form-control" disabled>
        </select>
    </div>
    <div class="mb-2">
        <label asp-for="crs_id"></label>

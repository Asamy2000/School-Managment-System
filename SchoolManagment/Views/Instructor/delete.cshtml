@model Instructor
@{
    SelectList depts;
    if (Model != null)
    {
        depts = new SelectList(ViewBag.Depts, "Id", "Name", Model.dept_Id);
    }
    else
    {
        depts = new SelectList(ViewBag.Depts, "Id", "Name");
    }

    SelectList crs;
    if (Model != null)
    {
        crs = new SelectList(ViewBag.Crs, "Id", "Name", Model.dept_Id);
    }
    else
    {
        crs = new SelectList(ViewBag.Crs, "Id", "Name");
    }
}
